command: |
    !so
message: |
    Give $(twitch $(touser) "{{displayName}}") a follow at https://twitch.tv/$(eval "$(touser)".replace(/^\@/gi,"");)
userlevel:
    moderator
cooldown:
    30
alias:
description: |
    Shout out a user to put their channel link in the chat.
usage: |
    !so @DarthMinos
sample: |
   Give DarthMinos a follow at <a href="https://twitch.tv/darthminos">https://twitch.tv/darthminos</a>